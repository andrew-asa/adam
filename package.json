{
  "name": "adam",
  "version": "0.0.1",
  "description": "Personal Assistant",
  "main": "./out/main/index.js",
  "author": "andrew",
  "homepage": "https://github.com/andrew-asa/adam",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "electron:generate-icons": "electron-icon-builder --input=./resources/assets/adamRound.png --output=build --flatten",
    "clean:cache": "npm cache clean --force",
    "build:server": "tsc -p tsconfig.server.json",
    "start:server": "node dist/server/index.js",
    "dev:server": "npm run build:server && npm run start:server",
    "buildDoc": "npx typedoc"
  },
  "dependencies": {
    "@better-scroll/core": "^2.0.0-beta.10",
    "@better-scroll/mouse-wheel": "^2.0.0-beta.10",
    "@better-scroll/scroll-bar": "^2.0.0-beta.10",
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@element-plus/icons": "^0.0.11",
    "@types/lodash": "^4.14.191",
    "ant-design-vue": "^3.2.20",
    "axios": "^1.3.6",
    "electron-updater": "^5.3.0",
    "element-plus": "^2.2.9",
    "highlight.js": "^11.7.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-router": "^12.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1",
    "markdown-it": "^13.0.1",
    "markdown-it-attrs": "^4.1.6",
    "mitt": "^2.1.0",
    "pinia": "^2.0.36",
    "plist": "^3.0.6",
    "pouchdb": "^7.2.2",
    "pouchdb-find": "^8.0.1",
    "typed.js": "^2.0.14",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/electron": "^1.6.10",
    "@types/node": "16.18.21",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "electron": "18.1.0",
    "electron-builder": "^23.6.0",
    "electron-icon-builder": "^2.0.1",
    "electron-vite": "1.0.22",
    "eslint": "^8.36.0",
    "eslint-plugin-vue": "^9.10.0",
    "less": "^4.1.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.24.8",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vue": "^3.2.47",
    "vue-tsc": "^1.8.3"
  }
}
